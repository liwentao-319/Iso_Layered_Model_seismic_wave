#!/usr/bin/env python
try:
    from numpy.distutils.core import Extension as NumpyExtension
    from numpy.distutils.core import setup

    from distutils.extension import Extension
    from Cython.Build import cythonize

    import numpy

except ImportError:
    raise ImportError('Numpy needs to be installed or updated.')


extensions = []

extensions.extend(cythonize(
    Extension("Layered_Model.rfmini", [
        "src/rfmini.pyx",
        "src/greens.cpp",
        "src/model.cpp",
        "src/pd.cpp",
        "src/synrf.cpp",
        "src/wrap.cpp",
        "src/fork.cpp"],
        include_dirs=[numpy.get_include()])))


setup(
    name="Layered_Model",
    version="1.0",
    author="",
    description=("Calculate layered model ground respond"),
    install_requires=[],
    packages=['Layered_Model'],
    package_dir={
        'Layered_Model': 'src'},
    ext_modules=extensions
)
